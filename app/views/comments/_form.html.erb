<div class="container">
  <div class="row">
    <%= form_for([@article, @article.comments.build]) do |f| %>
      <p>
        <p>Comentario por: <strong><%= current_user.name %></strong></p>
        <%= f.hidden_field :name, :value => current_user.name %>
      </p>
      <div class="field col-md-offset-1">
        <%= f.label :content %><br>
        <div class="row">
          <%= f.text_area :content, class: "col-md-6" %>
          <%= f.submit 'Publicar', class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
